{
    "output_path": "D:/WorkSpace/Demo tao video/viet_finetune/output",

    "datasets": [
        {
            "formatter": "ljspeech",
            "meta_file_train": "D:/WorkSpace/Demo tao video/viet_finetune/metadata.csv",
            "path": "D:/WorkSpace/Demo tao video/viet_finetune"
        }
    ],

    "model": "xtts_v2",
    "run_name": "xtts_vi_finetune",

    "num_loader_workers": 2,
