    "lr_gen": 0.00005,
    "lr_disc": 0.00005,
    "lr_scheduler": "linear",
    "seed": 42,

    "restore_path": "tts_models/multilingual/multi-dataset/xtts_v2",

    "freeze_layers": true,
    "freeze_text_encoder": true,
